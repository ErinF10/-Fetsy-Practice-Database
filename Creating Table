-- Create Statement for denormalized table:
CREATE TABLE fetsy (
	order_id INT PRIMARY KEY,
	order_quantity INT, 
	seller_id INT, 
	product_id INT,
	product_price INT,
	product_name VARCHAR(255),
	buyer_id INT,
	first_name VARCHAR(255),
	last_name VARCHAR(255),
	email VARCHAR(255),
	address VARCHAR(255),
	city VARCHAR(255),
	country VARCHAR(255),
	cc_number BIGINT,
	cc_exp VARCHAR(255),
	review VARCHAR(255),
	rating FLOAT,
	seller_name VARCHAR(255),
	seller_country VARCHAR(255),
	order_date DATE
);

CREATE TABLE sellers (
	seller_id INT PRIMARY KEY,
	seller_name VARCHAR(255),
	seller_countery VARCHAR(255)
);
-- cc info may need to be its own? you can have multiple cards
-- for one buyer. 
-- In this database no users have multiple addresses, cities,
-- or countries, but they do have multiple credict cards
CREATE TABLE buyers (
	buyer_id INT PRIMARY KEY, 
	first_name VARCHAR(255),
	last_name VARCHAR(255),
	email VARCHAR(255),
	address VARCHAR(255),
	city VARCHAR(255),
	country VARCHAR(255)
);

-- DATE may need to be imported differently 
CREATE TABLE credit_cards (
	cc_number BIGINT PRIMARY KEY,
	cc_exp DATE
);

-- DATE may need to be imported differently
CREATE TABLE orders (
	order_id INT PRIMARY KEY,
	order_quantity INT,
	review VARCHAR(255),
	rating FLOAT,
	order_date DATE
);

CREATE TABLE products (
	product_id,
	product_price,
	product_name
);





